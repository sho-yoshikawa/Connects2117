<div class="all-document">
<div class="login-backcolor">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="registration-container">
<br>
<div class="form-wrapper">
<div class="registration-name">
  Sign up
</div>
  <div class="registration-text">
    <%= f.email_field :email, placeholder:"Email adress", class:"floatlabel",  autocomplete: "email", :size=>"50" %>
  </div>

  <div class="registration-text">
    <% if @minimum_password_length %>
    <%= f.password_field :password, placeholder:"password", class:"floatlabel",autocomplete: "new-password" %>
    (半角英数字<%= @minimum_password_length %>文字以上)<br>
    <div class="alphanumeric"><%= @minimum_password_length %> or more alphanumeric characters</div>
    <% end %>
  </div>

  <div class="registration-text">
    <%= f.password_field :password_confirmation, placeholder:"Confirmation password", class:"floatlabel", autocomplete: "new-password" %>
  </div>

  <input type="submit" class="registration-button">
</div>
</div>
</div>
</div>
<div class="login-backcolor2">
</div>
<% end %>



